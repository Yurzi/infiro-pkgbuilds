pkgname=v2ray-geoip-loyalsoldier
pkgver=202511282213
pkgrel=1
pkgdesc="GeoIP list for routing purpose in Project V, with enhancements by Loyalsoldier"
arch=('any')
url="https://github.com/Loyalsoldier/v2ray-rules-dat"
license=('GPL-3.0-only')
provides=('v2ray-geoip')
conflicts=('v2ray-geoip')

source=(
    "geoip-$pkgver.dat::https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/$pkgver/geoip.dat"
    )

sha256sums=('5b6fe77546c989308620dda7cc584995b92003f1fc1b53b4d18c039d9a97790a')

package() {
  install -Dm644 geoip-$pkgver.dat "$pkgdir"/usr/share/v2ray/geoip.dat
}
