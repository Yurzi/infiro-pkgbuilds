pkgname=v2ray-domain-list-loyalsoldier
pkgver=202512242215
pkgrel=1
pkgdesc="A list of domains to be used as geosites for routing purpose in Project V, with enhancements by Loyalsoldier"
arch=('any')
url="https://github.com/Loyalsoldier/v2ray-rules-dat"
license=('GPL-3.0-only')
provides=('v2ray-domain-list-community')
conflicts=('v2ray-domain-list-community')

source=(
    "geosite-$pkgver.dat::https://github.com/Loyalsoldier/v2ray-rules-dat/releases/download/$pkgver/geosite.dat"
    )

sha256sums=('c8adc6042969e610daa2cebbe46b968809288e40714c5666fb081cf8e5dbb5bf')

package() {
  install -Dm644 geosite-$pkgver.dat "$pkgdir"/usr/share/v2ray/geosite.dat
}
